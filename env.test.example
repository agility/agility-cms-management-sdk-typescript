# Agility CMS Comprehensive Test Configuration
# Copy this file to .env.test and fill in your test instance details

# Required: Your Agility CMS Personal Access Token (PAT) with full permissions
AGILITY_PAT=your_personal_access_token_here

# Required: Your test instance GUID (use a dedicated test instance)
AGILITY_GUID=your_test_instance_guid_here

# Required: Your test website ID within the instance
AGILITY_WEBSITE=your_website_id_here

# Required: Comma-separated list of locales to test (e.g., en-us,fr-ca)
AGILITY_LOCALES=en-us

# Optional: Base URL for API calls (defaults to https://mgmt.aglty.io)
AGILITY_BASE_URL=https://mgmt.aglty.io

# Test Configuration
NODE_ENV=integration

# Optional: Custom timeout for long-running tests (milliseconds)
TEST_TIMEOUT=300000

# Optional: Enable verbose logging for debugging
DEBUG=true

# Warning: These tests create and delete content, models, containers, etc.
# Only use a dedicated test instance - never run against production!
