{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"noEmit": true,
		"types": ["jest", "node"],
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"tests/**/*",
		"**/*.test.ts",
		"**/*.spec.ts",
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
